<Window x:Class="Parfumer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Parfumer"
        mc:Ignorable="d"
        Title="Меню" Height="450" Width="800">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <UniformGrid Grid.Row="0">
            <Label Content="Введите логин" Width="300" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center"></Label>
            <TextBox x:Name="textBox_login" HorizontalAlignment="Center" Width="300" Height="20"  ></TextBox>
            <Label HorizontalAlignment="Center" Width="300" Height="30" Content="Введите пароль"  ></Label>
            <PasswordBox x:Name="password" Width="300" Height="20" HorizontalAlignment="Center" ></PasswordBox>
        </UniformGrid >
        
        <Button Grid.Row="1" Click="Btn_CheckUser_Click" x:Name="Btn_CheckUser" Content="Авторизоваться" Width="300" Height="100" Margin="0 0 0 30" VerticalAlignment="Bottom"></Button>
    </Grid>
</Window>
